% Die Darstellung von Frametitle und Framesubtitle:
\defbeamertemplate*{frametitle}{MYplain theme}
{%
	\nointerlineskip%
	\vskip-\beamer@headheight%
	\vbox to \beamer@headheight{%
		\vfill
		\leftskip=-\beamer@leftmargin%
		\advance\leftskip by0.3cm%
		\rightskip=-\beamer@rightmargin%
		\advance\rightskip by0.3cm plus1fil%
		\vspace*{0.55cm}
		{\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle\par}%
		{\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle\par}%
	}%
}

% Die Headline mit Frametitle (s.o.) und Logo:
\defbeamertemplate*{headline}{MYplain theme}
{%
	\settowidth{\beamer@boxwidth}{\resizebox{!}{\beamer@headheight}{\insertlogo}}%
	% Der Frametitle:
	\begin{beamercolorbox}{frametitle}
%	\begin{beamercolorbox}[width=\paperwidth]{frametitle}
		\usebeamercolor[bg]{MYplain}%
		\hskip\paperwidth%
		\hskip-\beamer@boxwidth%
		\vrule width\beamer@boxwidth height \beamer@headheight%
		\hskip-\beamer@boxwidth%
		% Wenn Die Option nologo gesetzt ist, dann binde kein Logo ein
		\ifbeamer@nologo
		\else
		% ...ansonsten verwende den Befehl \insertlogo:
		\hbox to \beamer@boxwidth{\hss\vbox to
		\beamer@headheight{\vss\hbox{\vspace*{-0.3cm}\hspace*{-0.1cm}\color{fg}\resizebox{!}{\beamer@headheight}{\insertlogo}}\vss}\hss}%
		\fi
	\end{beamercolorbox}
}

